<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<HorizontalScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/playerTableLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#ffffff">
			<TableRow
				android:background="#000000"
				android:layout_margin="1px">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/playerName" />
				<TextView android:paddingLeft="5px" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingBottom="2px" android:paddingTop="2px" android:text="@string/team" android:paddingRight="5px"></TextView>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/pos" />
					<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/sal" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/pred_sal" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/w" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/l" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5px"
					android:paddingTop="2px"
					android:paddingRight="5px"
					android:paddingBottom="2px"
					android:textSize="20sp"
					android:text="@string/era" />
